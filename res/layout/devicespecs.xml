<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4">

    <com.android.settings.deviceinfo.aboutphone.device_logo
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="18dp"
        android:layout_weight="2.05" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1.95"
        android:weightSum="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="vertical">

            <com.android.settings.deviceinfo.aboutphone.name_card
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@color/box_color"
                android:textColor="@color/card_sum" />

            <com.android.settings.deviceinfo.aboutphone.io_card
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/box_color"
                android:layout_weight="1"
                android:textColor="@color/card_sum"
                android:layout_margin="10dp"/>

            <com.android.settings.deviceinfo.aboutphone.camera_card
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/box_color"
                android:textColor="@color/card_sum"
                android:layout_margin="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="vertical">

            <com.android.settings.deviceinfo.aboutphone.cpu_card
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/box_color"
                android:textColor="@color/card_sum"
                android:layout_margin="10dp">
            </com.android.settings.deviceinfo.aboutphone.cpu_card>

            <com.android.settings.deviceinfo.aboutphone.battery_card
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/box_color"
                android:textColor="@color/card_sum"
                android:layout_margin="10dp"/>

            <com.android.settings.deviceinfo.aboutphone.display_card
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/box_color"
                android:textColor="@color/card_sum"
                android:layout_margin="10dp"/>


        </LinearLayout>
    </LinearLayout>

</LinearLayout> 